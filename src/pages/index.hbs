<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ seo.title }}</title> <!-- Use the title from seo.json -->
    <!-- Bootstrap and AdminLTE CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/css/adminlte.min.css">
    
    <!-- FontAwesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">

            <a class="navbar-brand" href="#">{{ seo.title }}</a> <!-- Use the title from seo.json -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#faq">FAQ</a>
                    </li>
                </ul>
            </div>
        </div>

    </nav>

    <!-- Splash Section with Stream Key Form -->
    <section id="splash" class="pt-5 mt-5">

        <div class="container text-center pt-5">
            <div class="alert alert-info" role="alert">Connect with OBS before joining your Stream.</div>
            <h1>Welcome to {{ seo.title }}</h1> <!-- Use the title from seo.json -->
            <p class="lead">Enter your stream name to get started.</p>
            <!-- Stream Key Submission Form -->
            <form id="streamKeyForm" class="form-inline justify-content-center">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Stream Name" id="streamKey" required>
                    <button type="submit" class="btn btn-primary">Join/Create</button>
                </div>
            </form>
            <div class="well">Server IP (Connect OBS): rtmp://5.196.66.175/live/</div>
            <div class="well">Stream Key: stream name</div>
        </div>
        </div>
    </section>
   
    <!-- Rest of the template remains the same -->
    <!-- Bootstrap and AdminLTE Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.7.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script>
    <script>
        document.getElementById('streamKeyForm').addEventListener('submit', function (event) {
            event.preventDefault(); // Prevent the default form submission
            var streamKey = document.getElementById('streamKey').value; // Get the stream key from the input
            window.location.href = '/stream/' + encodeURIComponent(streamKey); // Redirect to the stream page
        });
    </script>
</body>
</html>